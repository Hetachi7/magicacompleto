<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ReportarError">

    <TextView
        android:id="@+id/reportText"
        android:layout_width="361dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:fontFamily="@font/titulos"
        android:text="Reporta tu error"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="16dp"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/reportText2"
        android:layout_width="361dp"
        android:layout_height="45dp"
        android:fontFamily="@font/texto"
        android:text="Selecion el tipo de error"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/reportText"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="77dp"  />

    <Spinner
        android:id="@+id/Opcionesrepor"
        android:layout_width="361dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/texto"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/reportText2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="77dp"  />

    <TextView
        android:id="@+id/reportText3"
        android:layout_width="361dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="Describe el error"
        android:fontFamily="@font/titulos"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Opcionesrepor"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp" />

    <EditText
        android:id="@+id/error"
        android:layout_width="361dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/texto"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/reportText3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="77dp"  />

    <Button
        android:id="@+id/ReportB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:text="Enviar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="#8B0000"
        android:fontFamily="@font/titulos"
        app:layout_constraintTop_toBottomOf="@+id/error"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="161dp" />


</androidx.constraintlayout.widget.ConstraintLayout>